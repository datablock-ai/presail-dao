<%= form_for @proposal do |form| %>
  <% if @proposal.errors.any? %>
    <ul>
      <% @proposal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= form.label :title, class: 'block text-sm font-medium text-gray-700' %>
    <div class="mt-1">
      <%= form.text_field :title,
                          placeholder: 'Make an eye-catching title for your proposal',
                          class:       'block p-3 w-full border-0 border-b border-transparent bg-gray-50 focus:border-indigo-600 focus:ring-0 sm:text-sm' %>
    </div>
  </div>

  <div>
    <%= form.label :description, class: 'block text-sm font-medium text-gray-700' %>
    <div class="mt-1">
      <%= form.text_area :description,
                         placeholder: 'Describe your proposal',
                         class:       'block p-3 w-full border-0 border-b border-transparent bg-gray-50 focus:border-indigo-600 focus:ring-0 sm:text-sm' %>
    </div>
  </div>

  <%= form.submit 'Propose', class: 'mt-4 text-center flex-grow w-100 items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
<% end %>
